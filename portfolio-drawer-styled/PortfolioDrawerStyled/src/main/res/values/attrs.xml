<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Theme">

        <!-- Colors -->
        <attr name="accentColor" format="color"/>
        <attr name="drawerBackgroundColor" format="color"/>
        <attr name="avatarBackgroundColor" format="color"/>

        <!-- Backgrounds -->
        <attr name="listSelector" format="reference"/>

        <!-- Icons -->
        <attr name="expandIconLight" format="reference"/>
        <attr name="collapseIconLight" format="reference"/>
        <attr name="expandIconDark" format="reference"/>
        <attr name="collapseIconDark" format="reference"/>

        <!-- Margins & Padding -->
        <attr name="drawerLeftMargin" format="dimension"/>
        <attr name="drawerRightMargin" format="dimension"/>
        <attr name="navigationChildItemLeftMargin" format="dimension"/>
        <attr name="contentPadding" format="dimension"/>
        <attr name="formFieldPadding" format="dimension"/>
        <attr name="formLabelPadding" format="dimension"/>

    </declare-styleable>

</resources>